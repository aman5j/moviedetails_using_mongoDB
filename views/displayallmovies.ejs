<style>
    .maincontainer{
        background: #dfe6e9;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        background: #ffffff;
        width: 80%;
        height: 60%;
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 10px;
        padding-top: 5px;
        border-radius: 10px;
        overflow-y: scroll;
        display: flex;
        flex-direction: column;
    }
    .headingDiv{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding-bottom: 10px;
    }
    .heading{
        font-size: 24px;
        font-weight: bold;
        font-family: Oswald;
        padding-left: 5px;
        letter-spacing: 1px;
    }
    .formDiv{
        margin: 10px;
    }
    .gap{
        margin-bottom: 10px;
    }
    .btnstyle{
        display: flex;
        justify-content: center;
    }
    .messageDiv{
        display: flex;
        justify-content: center;
        font-size: 18px;
        font-weight: bold;
        font-family: Oswald;
    }
</style>

<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">    
    </head>

    <div class="maincontainer">
        <div class="box">
            <div class="headingDiv">
                <div style="display: flex; flex-direction: row;">
                <img src="/images/logo.jpg" width="45px">
                <div class="heading">Movie's List</div>
                </div>

                <div><a href="/movie/movie_interface" style="text-decoration: none;"><img src="/images/addmovie.png" style="width: 40px;"></a></div>
            </div>

    
    <% if(data.length==0) {%>
        <%=message %>
    <% } else { %>
        <table class="table table-striped">
            <tr>
                <th>Edit</th>
                <th>#</th>
                <th>ID</th>
                <th>State/City</th>
                <th>Cinema/Screen</th>
                <th>Movie Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Poster</th>
            </tr>

            <% data.map((item,i)=>{%>
                <tr> 
                    <td><a href="/movie/displayforedit?movieid=<%=item._id%>"><img src="/images/edit.png" style="width: 40px; height: 40px;"></a></td>
                    <td><%=i+1 %></td>
                    <td><%=item._id %></td>
                    <td><%=item.stateData[0].statename %>/<br><%=item.cityData[0].cityname %></td>
                    <td><%=item.cinemaData[0].cinemaname %>/<br><%=item.screenData[0].screenname %></td>
                    <td><%=item.moviename %></td>
                    <td><%=item.description %></td>
                    <td><%=item.status %></td>
                    <td><a href="/movie/displayposterforedit?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&poster=<%=item.poster%>"><img src="/images/<%=item.poster %>" style="width: 60px; height: 60px; border-radius: 30%;" ></a></td>
                </tr>
            
            <% }) %>
        </table>
    <% } %>
        </div>
    </div>

</html>